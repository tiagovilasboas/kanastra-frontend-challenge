{
  "name": "react-vite-boilerplate",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "author": {
    "name": "Tiago Vilas Boas",
    "email": "tcarvalhovb@gmail.com",
    "url": "https://github.com/tiagovilasboas"
  },
  "engines": {
    "node": "20.18.0"
  },
  "scripts": {
    "dev": "kill-port 5173 && vite",
    "format": "prettier --write . && npm run lint --fix",
    "clean": "rimraf dist .vite",
    "dev:open": "kill-port 5173 && vite --open",
    "build": "tsc -b && vite build",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix --max-warnings=0",
    "lint:check": "eslint . --max-warnings=0 --format=unix",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "pre-commit-check": "npm run lint && npm run type-check && npm run test -- --run",
    "check-env": "node scripts/check-env.js"
  },
  "dependencies": {
    "@mantine/core": "^8.1.2",
    "@tanstack/react-query": "^5.84.0",
    "axios": "^1.11.0",
    "i18next": "^25.3.1",
    "lucide-react": "^0.525.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.6.0",
    "react-router-dom": "^7.6.3",
    "sonner": "^2.0.7",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@tanstack/react-query-devtools": "^5.84.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.0.10",
    "@types/prop-types": "^15.7.15",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.2",
    "@vitest/coverage-v8": "^3.2.4",
    "cypress": "^14.5.3",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-formatjs": "^5.4.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "kill-port": "^2.0.1",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "terser": "^5.43.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.34.1",
    "vite": "^7.0.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "zod": "^3.25.76"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write",
      "git add"
    ],
    "*.{json,md,css}": [
      "prettier --write",
      "git add"
    ]
  }
}
