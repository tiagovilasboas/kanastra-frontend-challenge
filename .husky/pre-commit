#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run linting with strict mode
echo "ğŸ“ Checking code style..."
npm run lint || {
  echo "âŒ ESLint found errors. Please fix them before committing."
  echo "ğŸ’¡ Run 'npm run lint:fix' to automatically fix some issues."
  exit 1
}

# Run TypeScript type checking
echo "ğŸ”§ Checking TypeScript types..."
npm run type-check || {
  echo "âŒ TypeScript found type errors. Please fix them before committing."
  exit 1
}

# Run tests
echo "ğŸ§ª Running tests..."
npm run test -- --run || {
  echo "âŒ Tests failed. Please fix them before committing."
